@model GarageApp.Models.Garage

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Garage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <tabale>
        @foreach (var servise in ViewBag.GarageServises)
        {
        <div>
            <a asp-controller="GarageServises" asp-action="Details" asp-route-id="@servise?.Id">@servise.Name</a>
            <span>@servise.Price</span>
        </div>
        }
    </tabale>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
